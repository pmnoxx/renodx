{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(msvc) Attach",
      "type": "cppvsdbg",
      "request": "attach",
      "processId": "${command:pickProcess}",
      "symbolSearchPath": "${workspaceFolder}/build/Release;${workspaceFolder}/build/Debug;${workspaceFolder}/build/RelWithDebInfo",
      "justMyCode": false,
      "enableStepFiltering": false
    },
    {
      "name": "Debug with Exception Handling",
      "type": "cppvsdbg",
      "request": "attach",
      "processId": "${command:pickProcess}",
      "symbolSearchPath": "${workspaceFolder}/build/Release;${workspaceFolder}/build/Debug;${workspaceFolder}/build/RelWithDebInfo",
      "justMyCode": false,
      "enableStepFiltering": false,
      "setupCommands": [
        {
          "description": "Enable all exceptions",
          "text": "-gdb-set exception-verbose on"
        },
        {
          "description": "Catch all exceptions",
          "text": "catch throw"
        }
      ]
    },
    {
      "name": "Deploy Early Access",
      "type": "PowerShell",
      "request": "launch",
      "script": "${workspaceFolder}/scripts/deploy-early-access.ps1",
      "cwd": "${cwd}",
      "args": [
        "--target", "${command:cmake.buildTargetName}",
        "--description", "\"${input:deployDescription}\""
      ]
    }
  ],
  "inputs": [
    {
      "id": "deployDescription",
      "type": "promptString",
      "description": "Deploy description (optional)",
      "default": ""
    }
  ]
}